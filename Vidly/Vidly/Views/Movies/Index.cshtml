@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Movies</h2>

@Html.ActionLink("New Movie", "New", "Movies", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })

@if (Model.Any())
{
    <div class="panel">
        <table class="table table-bordered table-hover">

            <thead>
                <tr>
                    <th>Movies</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Movie in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(Movie.Name, "Edit", new { id = Movie.Id }, "Movies")</td>
                        <td>@Movie.Genre.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

else
{
    <p>No movies in the database!</p>
}